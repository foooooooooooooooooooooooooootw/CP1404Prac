BoxLayout:
    orientation:'vertical'
    BoxLayout:
        orientation:'horizontal'
        TextInput:
            id: input_number
            text: '34'
            multiline: False
            font_size: 48
            size_hint: 1,1
            on_text: app.handle_calc(input_number.text)

        BoxLayout:
            orientation:'vertical'
            size_hint_x: .3
            Button:
                text: "Up"
                on_press: app.handle_increase(input_number.text)
            Button:
                text: "Down"
                on_press: app.handle_decrease(input_number.text)
    Button:
        text: "Convert m to km"
        #on_press: app.handle_calc(input_number.text)
    Label:
        id: output_label
        text: app.message
        color: (1, 1, 0, 1)
        font_size:48